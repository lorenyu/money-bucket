extends ../page

block prepend nav
  activeItem = 'buckets'
  loggedIn = true

block containerContents
  .page-header
    h1 My Cubbies
  .btn-toolbar
    a.btn(href='#buckets/add')
      i.icon-plus
      |  Add Cubby
  .row
    for bucket in buckets
      .bucket.span3
        .well
          h3
            a.name(href='#buckets/' + bucket.id)= bucket.name
          h4.amount $#{bucket.amount}