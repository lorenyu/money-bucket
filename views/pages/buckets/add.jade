extends ../page

block prepend nav
  activeItem = 'buckets'
  loggedIn = true

block containerContents
  .page-header
    h1 Add New Cubby
  form.well(action='', method='post')
    label(for='name') Name
    input#name(type='text', name='name')
    label(for='description') Description
    textarea#description(name='description')
    .row
      .span12
        input.btn.btn-primary.btn-large(type='submit', value='Save')
        | 
        a.btn.btn-large(href='#buckets') Cancel