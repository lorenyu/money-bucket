extends page

block prepend nav
  activeItem = 'withdraw'
  loggedIn = true

block containerContents
  .page-header
    h1 Withdraw Money 
      small Choose wisely.
  .row
    .span3
      form.withdraw-form
        p.lead $#{withdrawAmount} 
          button.btn(type='submit') Withdraw
    .span3
      p.lead $#{allocatedAmount} Available
  .row
    for bucket in buckets
      include ../components/buckets/bucket