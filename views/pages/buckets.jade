extends page

block prepend nav
  activeItem = 'buckets'
  loggedIn = true

block containerContents
  .page-header
    h1 Manage Cubbies 
      small Start small, think big.
  .btn-toolbar
    .btn-group
      a.add-bucket.btn
        i.icon-plus
        |  Add Cubby
  if buckets.length <= 0
    .row
      .span12
        .alert.alert-info.alert-block
          button.close(data-dismiss='alert') &times;
          h3.alert-heading Adding Cubbies
          p Click 
            a.add-bucket.btn
              i.icon-plus
              |  Add Cubby
            |  to add a cubby. Or start with some 
            a.add-example-buckets.btn
              i.icon-plus
              |  example cubbies
  .buckets
    - for (var i = 0; i < buckets.length / 4; i++)
      .row
        for bucket in buckets.slice(4*i, 4*i + 4)
          .span3
            if editingBuckets[bucket.id]
              include ../components/buckets/edit-bucket
            else
              .bucket(bucketId=bucket.id)
                .well
                  .btn-toolbar
                    .delete.btn.pull-right
                      i.icon-remove
                    .edit.btn.pull-right
                      i.icon-pencil
                  h3.name= bucket.name
                  h4
                    small.description= bucket.description