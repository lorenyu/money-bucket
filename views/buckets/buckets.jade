extends ../page

block prepend nav
  activeItem = 'buckets'
  loggedIn = true

block containerContents
  .page-header
    h1 My Cubbies
  .row
    .span3
      h3
        a(href='#buckets/add') Add Cubby
    for bucket in buckets
      .bucket.span3
        h3
          a.name(href='#buckets/' + bucket.id)= bucket.name
        .amount $#{bucket.amount}